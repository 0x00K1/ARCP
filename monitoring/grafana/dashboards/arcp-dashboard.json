{
  "id": null,
  "uid": "arcp-dashboard",
  "title": "ARCP Service Monitoring",
  "description": "Comprehensive monitoring dashboard for ARCP services including metrics, logs, and traces",
  "tags": ["arcp", "monitoring", "prometheus", "redis"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "Service Status",
      "type": "stat",
      "targets": [
        {
          "expr": "arcp_active_agents",
          "interval": "",
          "legendFormat": "{{agent_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(arcp_requests_total{job=\"arcp\"}[5m])",
          "interval": "",
          "legendFormat": "{{method}} {{status_code}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 9,
        "x": 6,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Redis Status",
      "type": "stat",
      "targets": [
        {
          "expr": "redis_up",
          "interval": "",
          "legendFormat": "Redis",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 8,
        "w": 9,
        "x": 15,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "Response Time Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"arcp\"}[5m]))",
          "interval": "",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"arcp\"}[5m]))",
          "interval": "",
          "legendFormat": "50th percentile",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"arcp\"}[5m]))",
          "interval": "",
          "legendFormat": "99th percentile",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"arcp\"}",
          "interval": "",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 6,
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "interval": "",
          "legendFormat": "Used Memory",
          "refId": "A"
        },
        {
          "expr": "redis_memory_max_bytes",
          "interval": "",
          "legendFormat": "Max Memory",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "Redis Connected Clients",
      "type": "timeseries",
      "targets": [
        {
          "expr": "redis_connected_clients",
          "interval": "",
          "legendFormat": "Connected Clients",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 8,
      "title": "HTTP Status Codes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(arcp_requests_total{job=\"arcp\"}[5m])",
          "interval": "",
          "legendFormat": "{{status_code}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 9,
      "title": "System Resource Utilization",
      "type": "timeseries",
      "targets": [
        {
          "expr": "arcp_system_cpu_utilization_percent",
          "interval": "",
          "legendFormat": "CPU %",
          "refId": "A"
        },
        {
          "expr": "arcp_system_memory_utilization_percent",
          "interval": "",
          "legendFormat": "Memory %",
          "refId": "B"
        },
        {
          "expr": "arcp_system_disk_utilization_percent",
          "interval": "",
          "legendFormat": "Disk %",
          "refId": "C"
        },
        {
          "expr": "arcp_system_network_utilization_percent",
          "interval": "",
          "legendFormat": "Network %",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 32
      }
    },
    {
      "id": 10,
      "title": "Request Duration Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(arcp_request_duration_seconds_bucket[5m]))",
          "interval": "",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(arcp_request_duration_seconds_bucket[5m]))",
          "interval": "",
          "legendFormat": "50th percentile",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 40
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
